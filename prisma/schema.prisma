generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Creator {
  id            Int           @id @default(autoincrement())
  walletAddress String        @unique
  assets        WrappedData[]
  timestamp     DateTime @default(now())
}

model WrappedData {
  id          Int     @id @default(autoincrement())
  originalUrl String
  methods     String
  gatewaySlug     String @unique
  header      String  @default("")
  body        String  @default("")
  paymentAmount  Float
  paymentReceipt String
  description   String?
  creatorId   Int
  urlWrapped String
  creator     Creator @relation(fields: [creatorId], references: [id])
  timestamp     DateTime @default(now())
}

model transactions {
  id             String   @id @db.Char(66)
  buyestWallet  String   @default("") 
  creatorWallet String   @default("") 
  gatewaySlug   String   @default("") 
  amount        Float    @default(0) 
  status        String   @default("") 
  timestamp     DateTime @default(now())
}